{
  "name": "forge",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:api": "pnpm --filter @forge/api dev",
    "dev:web": "pnpm --filter @forge/web dev",
    "build": "pnpm -r build",
    "db:generate": "pnpm --filter @forge/db generate",
    "db:migrate": "pnpm --filter @forge/db migrate",
    "db:push": "tsx packages/db/src/push.ts",
    "db:seed": "pnpm --filter @forge/db seed",
    "db:studio": "pnpm --filter @forge/db studio",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "engines": {
    "node": ">=20"
  }
}
